# Test Environment Configuration
# Copy this file to .env.development and fill in your actual values

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL connection string for test database
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/cognitive_memory_test

# =============================================================================
# AI Service Configuration
# =============================================================================
# OpenAI API Key for embedding tests
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key for evaluation tests
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-your-anthropic-api-key-here

# =============================================================================
# Test Configuration
# =============================================================================
# Test environment identifier
TEST_ENV=development

# Enable pytest current test display
PYTEST_CURRENT_TEST=1

# =============================================================================
# Optional: Feature Flags
# =============================================================================
# Enable/disable specific test features
ENABLE_INTEGRATION_TESTS=true
ENABLE_PERFORMANCE_TESTS=false
ENABLE_SLOW_TESTS=false

# =============================================================================
# Optional: Logging Configuration
# =============================================================================
# Log level for tests (DEBUG, INFO, WARNING, ERROR)
TEST_LOG_LEVEL=INFO

# Enable verbose pytest output
PYTEST_VERBOSE=false

# =============================================================================
# Optional: Coverage Configuration
# =============================================================================
# Minimum coverage threshold (percentage)
COVERAGE_THRESHOLD=80

# =============================================================================
# Optional: MCP Server Configuration
# =============================================================================
# MCP Server port for integration tests
MCP_SERVER_PORT=3000

# Timeout for MCP tool calls (seconds)
MCP_TIMEOUT=30
